<div class="form-heading">ユーザー一覧</div>
    <div class="form users-form">
      <div class="form-body">
        <% if flash[:caution] %>
          <h2><%= flash[:caution] %></h2>
        <% end %>

        <% @users.each do |user| %>
          <div class="posts-index-item">
            <%= link_to(user.name, "/users/#{user.id}") %>
          </div>
        <% end %>

        <p>新たなユーザーを作る？ <%= link_to "新規作成", signup_path %></p>

      </div>
    </div>
